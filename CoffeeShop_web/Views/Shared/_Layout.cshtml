@inherits System.Web.Mvc.WebViewPage
@{
    Layout = null;
}



<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - CoffeeShop POS</title>

    <!-- CSS -->
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />
    <link href="~/Content/pos.css" rel="stylesheet" />
    <link href="~/Content/Admin.css" rel="stylesheet" /> <!-- 🔴 QUAN TRỌNG -->
</head>

<body>

    @* ===== HEADER ===== *@
    @if (Session["Username"] != null)
    {
        <div class="pos-header">
            <div class="logo">
                <img src="~/Content/Image/logo2.jpg"
                     alt="CoffeeShop POS"
                     style="height:60px" />
            </div>

            <div class="user-box">
                <span>@Session["Username"]</span>

                @if (Session["Quyen"]?.ToString() == "Admin")
                {
                    <a href="@Url.Action("NhanVien","Admin")" class="admin-btn">
                        Quản trị
                    </a>


                    <a href="@Url.Action("NhanVien","Admin")"
                       class="admin-btn">
                        Nhân viên
                    </a>
                }

                <a href="@Url.Action("Logout","Auth")"
                   class="logout-btn">
                    Đăng xuất
                </a>
            </div>
        </div>
    }

    @* ===== MAIN CONTENT ===== *@
    <div class="pos-main">
        @RenderBody()
    </div>

    <!-- JS -->
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>

</body>
</html>
